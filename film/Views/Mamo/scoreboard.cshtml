@model IEnumerable<film.Models.mamo_team>

@section cssjs { }

<h2>Scoreboard</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.owner.person.first_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.owner.person.last_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.score)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.owner.person.first_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.owner.person.last_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.score)
        </td>
        <td>
            @Html.ActionLink("View Submission", "myscore", new { id=item.owner.id, year = item.year.id })
        </td>
    </tr>
}

</table>

@model IEnumerable<film.Models.mamo_team>

@section cssjs { }

<h2>Scoreboard</h2>

<table class="table">
    <tr>
        <th>
            Position
        </th>
        <th>
            Person
        </th>
        <!--
        <th>
            Html.DisplayNameFor(model => model.owner.person.first_name)
        </th>
        <th>
            Html.DisplayNameFor(model => model.owner.person.last_name)
        </th>
        -->
        <th>
            @Html.DisplayNameFor(model => model.score)
        </th>
        <th></th>
    </tr>

@{ int i = 0; }
@foreach (var item in Model) {
    i++;
    <tr>
        <td>
            @Html.Raw(i)
        </td>
        <td>
            @Html.Raw(item.owner.person.first_name + " " + item.owner.person.last_name)
        </td>
        <!--
        <td>
            Html.DisplayFor(modelItem => item.owner.person.last_name)
        </td>
        -->
        <td>
            @Html.DisplayFor(modelItem => item.score)
        </td>
        <td>
            @Html.ActionLink("View Submission", "myscore", new { id = item.id })
        </td>
    </tr>
}

</table>

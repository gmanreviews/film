<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/custom/main.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.12.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4/jquery-ui.js"></script>
    
    <link href="~/Scripts/jquery-ui-1.11.4/jquery-ui.min.css" rel="stylesheet" />

    @RenderSection("cssjs")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Box Office Game", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("MAMO", "Index", "Mamo")</li>
                    <!--
                    <li>Html.ActionLink("About", "About", "Home")</li>
                    <li>Html.ActionLink("Contact", "Contact", "Home")</li>
                    -->
                </ul>
            </div>
            <div class="nav navbar-nav pull-right">
                @if (film.Models.general.user.id == 0)
                {
                    Html.RenderAction("LoginForm", "User");
                }
                else
                {
                    <div class="loginform">
                        <span class="user-details">@{ Html.RenderAction("LoggedInDisplay", "User"); }</span>
                        <p>@Html.ActionLink("Logout", "Logout", "User")</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>A Film Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

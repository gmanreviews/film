@model film.Models.user

@{  Layout = null; }

@using (Html.BeginForm("LoginForm","User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="loginform">
        <!-- Html.LabelFor(model => model.username, htmlAttributes: new { class = "control-label col-md-1" }) -->
        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control col-md-2 col-xs-7", placeholder = "username" } })
        <!-- Html.LabelFor(model => model.password, htmlAttributes: new { class = "control-label col-md-1" }) -->
        @Html.PasswordFor(model => model.password, new { @class = "form-control text-box single-line col-md-2 col-xs-7 col-md-offset1", placeholder = "password" } )
        <div class="col-md-1 col-xs-7">
            <input type="submit" value="Login" class="btn btn-default" />
        </div>
    </div>
}

@model chess.Models.user

@{
    ViewBag.Title = "signup";
}

<h2>signup</h2>

@{ 
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>user</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.DisplayNameFor(model => model.username)
                    @Html.TextBoxFor(model => model.username)
                    @Html.ValidationMessageFor(model => model.username)
                    <br />
                    @Html.DisplayNameFor(model => model.password)
                    @Html.PasswordFor(model => model.password)
                    @Html.ValidationMessageFor(model => model.password)
                    <br />
                    @Html.DisplayNameFor(model => model.password2)
                    @Html.PasswordFor(model => model.password2)
                    @Html.ValidationMessageFor(model => model.password2)
                    <br />
                    @Html.DisplayNameFor(model => model.person.first_name)
                    @Html.TextBoxFor(model => model.person.first_name)
                    @Html.ValidationMessageFor(model => model.person.first_name)
                    <br />
                    @Html.DisplayNameFor(model => model.person.last_name)
                    @Html.TextBoxFor(model => model.person.last_name)
                    @Html.ValidationMessageFor(model => model.person.last_name)
                    <br />
                    @Html.DisplayNameFor(model => model.email)
                    @Html.TextBoxFor(model => model.email)
                    @Html.ValidationMessageFor(model => model.email)
                    <br />
                    @Html.DisplayNameFor(model => model.person.country)
                    @Html.TextBoxFor(model => model.person.country)
                    @Html.ValidationMessageFor(model => model.person.country)
                    <br />
                    @Html.DisplayNameFor(model => model.user_type.type_desc)
                    @{ Html.RenderAction("user_type_dropdown", "usertype");}
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

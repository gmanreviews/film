@model film.Models.user

@{
    ViewBag.Title = "signup";
}

@section cssjs { }

<h2>Sign Up Form</h2>

@using (Html.BeginForm("signup","user",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(model => model.username)
                    </div>
                    @Html.TextBoxFor(model => model.username, new { @class = "form-control col-md-2 col-xs-7 text-box single-line", @required = "required" })
                    @Html.ValidationMessageFor(model => model.username)
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(model => model.password)
                    </div>
                    @Html.PasswordFor(model => model.password, new { @class = "form-control col-md-2 col-xs-7 text-box single-line", @required = "required" })
                    @Html.ValidationMessageFor(model => model.password)
                    </div>
                    <br />
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(model => model.password2)
                    </div>
                    @Html.PasswordFor(model => model.password2, new { @class = "form-control col-md-2 col-xs-7 text-box single-line", @required = "required" })
                    @Html.ValidationMessageFor(model => model.password2)
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(model => model.person.first_name)
                    </div>
                    @Html.TextBoxFor(model => model.person.first_name, new { @class = "form-control col-md-2 col-xs-7 text-box single-line", @required = "required" })
                    @Html.ValidationMessageFor(model => model.person.first_name)
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(model => model.person.last_name)
                    </div>
                    @Html.TextBoxFor(model => model.person.last_name, new { @class = "form-control col-md-2 col-xs-7 text-box single-line", @required = "required" })
                    @Html.ValidationMessageFor(model => model.person.last_name)
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(model => model.email)
                    </div>
                    @Html.TextBoxFor(model => model.email, new { @class = "form-control col-md-2 col-xs-7 text-box single-line", @required = "required" })
                    @Html.ValidationMessageFor(model => model.email)
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(model => model.person.country)
                    </div>
                    @Html.TextBoxFor(model => model.person.country, new { @class = "form-control col-md-2 col-xs-7 text-box single-line", @required = "required" })
                    @Html.ValidationMessageFor(model => model.person.country)
                </div>
                <br />
                <div class="row">
                    <!--Html.DisplayNameFor(model => model.user_type.type_desc)-->
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}


